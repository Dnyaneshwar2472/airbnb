<%- include("partials/header") %>
<div class="container">
  <h2>Add Hotel</h2>

  <form action="/" method="POST">
    <input type="number" name="id" placeholder="Hotel ID" required />

    <input type="text" name="heading" placeholder="Heading" required />

    <input type="text" name="subHeading" placeholder="Sub Heading" required />

    <input type="text" name="location" placeholder="Location" required />

    <h3>Facilities</h3>

    <input type="number" name="guests" placeholder="Guests" required />
    <input type="number" name="bedroom" placeholder="Bedrooms" required />
    <input type="number" name="bed" placeholder="Beds" required />
    <input type="number" name="bathroom" placeholder="Bathrooms" required />

    <h3>Images (URLs)</h3>

    <input type="text" name="image1" placeholder="Image 1 URL" required />
    <input type="text" name="image2" placeholder="Image 2 URL" required />
    <input type="text" name="image3" placeholder="Image 3 URL" required />
    <input type="text" name="image4" placeholder="Image 4 URL" required />
    <input type="text" name="image5" placeholder="Image 5 URL" required />

    <h3>Other Details</h3>

    <input type="number" name="price" placeholder="Price" required />
    <input
      type="number"
      step="0.1"
      name="rating"
      placeholder="Rating"
      required
    />
    <input type="number" name="nights" placeholder="Nights" required />

    <label>
      Mark as Favorite
      <label>
        <input type="radio" name="favorite" value="true" />
        Yes
      </label>

      <label>
        <input type="radio" name="favorite" value="false" checked />
        No
      </label>
    </label>

    <br /><br />

    <button type="submit">Add Hotel</button>
  </form>
</div>

<%- include("partials/footer") %>
